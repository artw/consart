#!/usr/bin/env zsh
zparseopts f=force x=xorg

configs=(
  hgrc
  tmux.conf
  vim
  vimrc
  zsh
  zshenv
  zshrc
)

# x11 specific stuff
if [[ -n $xorg ]]; then
configs+=(
  compton.conf
  fonts.conf
  gtkrc-2.0
  i3
  Xdefaults
  xinitrc
  Xmodmap
)
fi

foreach f in $configs
  dest=${HOME}/.$f
  src=`dirname $0`/$f
  ln -sFni ${force} $src $dest 
end
