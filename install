#!/usr/bin/perl -w
# configuration 
my @configus = qw(
   zsh
   zshrc
   vimrc
   tmux.conf
   hgrc
);
#-#

use strict;
# get install script dir, since we are using relative paths
use FindBin qw($Bin);
use lib "$Bin/../lib";
print $Bin;

print "\n";
#-#

# prompt before action
print "warning, this will overwrite all existing console configs without prompting, continue? ";
chomp($_ = <STDIN>);
 exit unless /^y/;
#-#

foreach my $c (@configus) {
   my $dest = "$ENV{'HOME'}/.$c";
   # delete destination if it exists
   $_ = $dest; `rm -rf $_`;
   # and make the link
   symlink "$Bin/$c", $dest;
}
#-#
