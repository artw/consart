#!/bin/sh
if [[ -z $1 ]]; then
  echo "usage: $0 <int|ext>"
  echo "\tsets automatic resolution for connected display"
fi

if [[ $1 == "ext" ]]; then
  xrandr --output LVDS1 --off
  xrandr --output VGA1 --auto
fi

if [[ $1 == "int" ]]; then
  xrandr --output LVDS1 --auto
  xrandr --output VGA1 --off
fi
